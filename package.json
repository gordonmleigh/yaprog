{
  "name": "yaprog",
  "version": "0.2.2",
  "description": "Yet Another Progress Bar",
  "main": "lib/index.js",
  "repository": "https://github.com/gordonmleigh/yaprog.git",
  "author": "Gordon Leigh <gordon.leigh@futurematik.co.uk>",
  "license": "MIT",
  "keywords": [
    "cli",
    "progress",
    "bar"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile && yarn lint",
    "clean": "rm -rf lib/ dist/",
    "compile": "tsc",
    "lint": "eslint src/ --ext=ts,tsx",
    "postversion": "git push --follow-tags",
    "preversion": "yarn build",
    "test": "node -r ts-node/register src/test.ts",
    "watch:compile": "tsc --incremental --preserveWatchOutput --watch"
  },
  "files": [
    "lib/**",
    "src/**"
  ],
  "devDependencies": {
    "@types/lodash.throttle": "^4.1.6",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "lodash.throttle": "^4.1.1"
  }
}
